	<package name="empPkg" extends="struts-default" namespace="/ajax" >
        <action name="serverTime" class="com.company._1_ServerTime.ServerTimeAction"/>
        <action name="checkUsername" class="com.company._2_checkUsername.CheckUsernameAction"/>
        <action name="login" class="com.company._3_login.LoginAction"/>
        <!-- <action name="link_*" class="com.company._link.LinkAction" method="{1}"/>
