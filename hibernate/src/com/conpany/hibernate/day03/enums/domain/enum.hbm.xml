<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.conpany.hibernate.day03.enums.domain">
	<class name="Employee">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="name"/>
		<property name="sex">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.conpany.hibernate.day03.enums.domain.Sex</param>
				<param name="useNamed">true</param>
			</type>
		</property>
	</class>
</hibernate-mapping>