<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.conpany.hibernate.day03.extend.domain">
	<class name="Product">
		<id name="id">
			<generator class="increment"/>
		</id>
		<property name="name"/>
		<union-subclass name="Book" table="BOOK">
			<property name="isbn"/>
			<property name="author"/>
		</union-subclass>
		<union-subclass name="Cloth" table="CLOTH">
			<property name="color"/>
		</union-subclass>
	</class>
</hibernate-mapping>