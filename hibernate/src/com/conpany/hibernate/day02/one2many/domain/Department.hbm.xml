<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.conpany.hibernate.day02.one2many.domain">
	<class name="Department">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="name"/>
		<set name="emps">
			<!-- 关系由谁管理，外键就告诉谁，由谁来维护关系，就由谁来发送SQL -->
			<!-- key代表many方哪个外键关联到我的主键 -->
			<key column="dept_id"/>
			<one-to-many class="Employee"/>
		</set>
	</class>
</hibernate-mapping>