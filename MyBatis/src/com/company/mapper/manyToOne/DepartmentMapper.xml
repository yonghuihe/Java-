<?xml version="1.0" encoding="UTF-8"?>	
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mapper.manyToOne.DepartmentMapper">
	
	<insert id="add" parameterType="Department" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into department (name) values (#{name})
	</insert>
	
	<select id="get" parameterType="Long" resultType="Department">
		select * from department where id = #{id}
	</select>
</mapper>