<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="actionPkg" extends="struts-default" namespace="/pss">
		<!-- class属性的默认值是:com.opensymphony.xwork2.ActionSupport -->
		<action name="action" class="com._520it._4_actionConfig.Action"  method="execute">
			<result name="login" type="redirectAction" >
				<param name="namespace">/re</param>
				<param name="actionName">redi</param>
			</result>
		</action>
	</package>
	
	<package name="rePkg" extends="struts-default" namespace="/re">
		<action name="redi"  method="execute">
			<result name="success" >/hello.jsp</result>
		</action>
	</package>
</struts>